{
  "name": "midinero",
  "version": "1.0.0",
  "scripts": {
    "start": "tsc && concurrently \"npm run tsc:w\" \"npm run lite\" ",
    "lite": "lite-server",
    "postinstall": "typings install",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "typings": "typings",
    "clean": "rm -rf dist",
    "serve": "http-server . -p 5556",
    "build": "npm run clean && tsc",
    "build_prod": "browserify -s main dist/main.js > ../../public/assets/javascripts/bundle.js",
    "minify": "uglifyjs ../../public/assets/javascripts/bundle.js --screw-ie8 --compress --mangle --output ../../public/assets/javascripts/bundle.min.js",
    "templates": "rm -r ../../public/app/templates && cp -r app/templates ../../public/app/templates",
    "images": "cp -r app/images ../../public/app/",
    "style": "lessc style.less style.css && cp style.css ../../public/assets/stylesheets",
    "to_public": "npm run build_prod &&  npm run templates && npm run images && npm run style "
  },
  "license": "ISC",
  "dependencies": {
    "@angular/common": "~2.4.0",
    "@angular/compiler": "~2.4.0",
    "@angular/core": "~2.4.0",
    "@angular/forms": "~2.4.0",
    "@angular/http": "~2.4.0",
    "@angular/platform-browser": "~2.4.0",
    "@angular/platform-browser-dynamic": "~2.4.0",
    "@angular/router": "~3.4.0",
    "@angular/upgrade": "2.0.0",
    "angular2-busy": "^1.0.2",
    "bootstrap": "^3.3.6",
    "core-js": "^2.4.1",
    "ng2-bootstrap": "1.1.4",
    "ng2-datepicker": "^1.1.1",
    "reflect-metadata": "^0.1.8",
    "rxjs": "5.0.1",
    "systemjs": "0.19.40",
    "zone.js": "^0.7.4",
    "angular2-busy": "1.0.2"
  },
  "devDependencies": {
    "@types/core-js": "^0.9.34",
    "@types/jquery": "^2.0.34",
    "browserify": "^13.0.1",
    "concurrently": "^3.1.0",
    "http-server": "^0.9.0",
    "lite-server": "^2.2.2",
    "typescript": "~2.0.10",
    "typings": "^1.3.2",
    "uglifyjs": "^2.4.10"
  }
}
